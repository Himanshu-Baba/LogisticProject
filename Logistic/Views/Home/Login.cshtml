
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@section Login{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <style>

            body {
                background-image: url('../../Images/Home/LoginImg.jpg');
                background-repeat: no-repeat;
                background-size: contain;
            }

            .login-container {
                max-width: 400px;
                margin: 0 auto;
                margin-top: 100px;
                padding: 20px;
                border-radius: 5px;
                height: 400px;
                color: #060101;
            }

            .divider:after,
            .divider:before {
                content: "";
                flex: 1;
                height: 1px;
                background: #eee;
            }

            #or {
                margin-top: -50px;
            }

            .text-muted {
                color: #060101 !important;
            }

            .required::after {
                content: ' *';
                color: red;
            }
        </style>
    </head>
    <body>
        <div class="container" style="padding-bottom:50px">
            <div class="login-container bg-white">
                <form>
                    <h2 class="text-center"><b>Login</b></h2>
                    <div class="form-group">
                        <label class="required" for="Email/Contact">Email/Contact</label>
                        <input type="text" class="form-control" id="Email/Contact" name="Email/Contact" placeholder="Enter Your Email or Contact Number">
                    </div>
                    <div class="form-group">
                        <label class="required" for="Password">Password</label>
                        <input type="Password" class="form-control" id="Password" name="Password" placeholder="Enter Your Password">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Generate OTP To Login</button>
                    <p class="text-center"><a href="#">Forgot password?</a></p>
                    <p class="text-center">
                        Don't have an account? <a href="/Home/Signup">Register here</a>
                    </p>
                </form>
            </div>
        </div>
    </body>
</html>
}

