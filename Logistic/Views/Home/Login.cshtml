@model DataBaseAccessLayer.Model.SignUpModel


@{
    ViewBag.Title = "Login";
}

<meta name="viewport" content="width=device-width" />
<title>Login</title>
@Html.Raw(ViewBag.insertData)

@section Login{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <style>

            body {
                background-image: url('../../Images/Home/LoginImg.jpg');
                background-repeat: no-repeat;
                background-size: contain;
            }

            .login-container {
                max-width: 400px;
                margin: 0 auto;
                margin-top: 100px;
                padding: 20px;
                border-radius: 5px;
                height: 400px;
                color: #060101;
            }

            .divider:after,
            .divider:before {
                content: "";
                flex: 1;
                height: 1px;
                background: #eee;
            }

            #or {
                margin-top: -50px;
            }

            .text-muted {
                color: #060101 !important;
            }

            .required::after {
                content: ' *';
                color: red;
            }
        </style>
    </head>
    <body>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="container" style="padding-bottom:50px">
                <div class="login-container bg-white" style="border: solid; border-color: #f15a28">
                    <form>
                        <h2 class="text-center"><b>Login</b></h2>

                        <div class="form-group">
                            <label class="required" for="Email/Contact">Email/Contact</label>
                            @Html.EditorFor(model => model.userEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.userEmail, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <label class="required" for="Password">Password</label>
                            @Html.EditorFor(model => model.userPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.userPassword, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-block" @*type="button"*@>Click Me!</button>
                            <!--<a class="btn btn-primary btn-block"--> @*href="/Home/wellcome"*@ <!--role="button">Generate OTP To Login</a>-->
                        </div>
                        <p class="text-center"><a href="/Home/ForgotPassword">Forgot password?</a></p>
                        <p class="text-center">
                            Don't have an account? <a href="/Home/Signup">Register here</a>
                        </p>

                    </form>
                </div>
            </div>

        }
}

@*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@
</body>
</html>


