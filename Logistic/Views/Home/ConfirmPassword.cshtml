
@{
    ViewBag.Title = "ConfirmPassword";
}

<h2>ConfirmPassword</h2>




@section ConfirmPassword{

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <style>

            body {
                background-image: url('../../Images/Home/LoginImg.jpg');
                background-repeat: no-repeat;
                background-size: contain;
            }

            .login-container {
                max-width: 400px;
                margin: 0 auto;
                margin-top: 100px;
                padding: 20px;
                border-radius: 5px;
                height: 300px; 
                color: #060101;
            }

            .divider:after,
            .divider:before {
                content: "";
                flex: 1;
                height: 1px;
                background: #eee;
            }

            #or {
                margin-top: -50px;
            }

            .text-muted {
                color: #060101 !important;
            }

            .required::after {
                content: ' *';
                color: red;
            }
        </style>
    </head>
    <body>
        <div class="container" style="padding-bottom:50px">
            <div class="login-container bg-white">
                <h2 class="text-center"><b>Confirm your Password</b></h2>

                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Email/Contact" name="Email/Contact" placeholder="Enter your Password">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Email/Contact" name="Email/Contact" placeholder="Confirm Your Password">
                    </div>
                    <div class="form-group">
                        <a class="btn btn-primary btn-block" href="/Home/Login" role="button">Continue</a>

                    </div>

                </form>
            </div>
        </div>
    </body>
</html>
}


